{% extends 'BlogBundle::layout.html.twig' %}

{% block content %}
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col bg-success text-white col-title">
                    <h1>Blog</h1>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                {% for post in posts %}
                    <div class="col-sm-6">
                        <div class="card card-post">
                            <div class="card-block">
                                <h4 class="card-title"><a href="{{ path('slug', {slug : post.slug}) }}" class="card-link">{{ post.title }}</a></h4>
                                <div class="card-subtitle mb-2 text-muted">
                                    <ul class="list-inline">{% for category in post.categories %}
                                            <li class="list-inline-item"><a href="{{ path('slug', {slug : category.slug}) }}">{{ category.name }}</a>
                                            </li>{% endfor %}</ul>
                                </div>
                                <p class="card-text">{{ post.content|truncate(200, true) }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="navigation">
                    {{ knp_pagination_render(posts) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
