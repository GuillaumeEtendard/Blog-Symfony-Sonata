{% extends 'BlogBundle::layout.html.twig' %}

{% block content %}
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col bg-success text-white col-title">
                    <h1>Blog</h1>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                <div class="col">
                    {% for post in posts %}
                        <div class="card card-post">
                            <div class="card-block">
                                <h4 class="card-title">{{ post.title }}</h4>
                                <h6 class="card-subtitle mb-2 text-muted">{% for category in post.categories %}<a href="{{ path('category', {name : category.name}) }}">{{ category.name }}</a>{% endfor %}</h6>
                                <p class="card-text">{{ post.content|truncate(200, true) }}</p>
                                <a href="{{ path('singlePost', {title : post.title}) }}" class="card-link">Post link</a>
                            </div>
                        </div>
                    {% endfor %}

                    <div class="navigation">
                        {{ knp_pagination_render(posts) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
